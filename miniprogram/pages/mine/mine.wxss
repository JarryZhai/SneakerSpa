.UCenter-bg {
  background-image: url("https://s1.ax1x.com/2020/06/10/tokRQf.jpg");
  background-size: cover;
  height: 510rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  margin-bottom: 0rpx;
}

.UCenter-bg text {
  opacity: 0.8;
}

.margin-top-sm {
  margin-top: 20rpx;
  font-size: 26rpx;
}

.UCenter-bg image {
  margin-top: 10rpx;
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

.img-user{
  width: 130rpx;
  height: 130rpx;
  display: block;
  overflow: hidden;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
}

.info-user{
  width: 400rpx;
